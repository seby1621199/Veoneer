<Window x:Class="WpfApp1.Afisare"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Afisare" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>


        <StackPanel Grid.Column="0">
            <TextBlock HorizontalAlignment="Left" Margin="30,30,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="275" Width="365" Name="textBlock"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Button Content="Normal Execute" HorizontalAlignment="Center" Margin="0,30,0,20"  Click="Button_Click" Width="87"/>
            <Button Content="Async Execute" HorizontalAlignment="Center" Margin="0,0,0,0" Click="Button_Click_1" Width="87" />
        </StackPanel>
    </Grid>
</Window>
